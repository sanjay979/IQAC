<?php
// Establish a database connection
$connection = mysqli_connect('localhost', 'username', 'password', 'database_name');

if (!$connection) {
    die('Database connection failed.');
}

$currentDate = date('Y-m-d'); // Get the current date

// SQL query to retrieve members with start and end dates
$query = "SELECT COUNT(*) AS memberCount FROM members WHERE start_date <= '$currentDate' AND end_date >= '$currentDate'";

$result = mysqli_query($connection, $query);

if (!$result) {
    die('Query execution failed.');
}

$row = mysqli_fetch_assoc($result);
$memberCount = $row['memberCount'];

echo "Number of members active today: " . $memberCount;

// Close the database connection
mysqli_close($connection);
?>
